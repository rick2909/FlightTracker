@model FlightTracker.Web.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Flight Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Flight Dashboard</h1>
            
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-warning" role="alert">
                    @Model.ErrorMessage
                </div>
            }
        </div>
    </div>

    @if (Model.HasFlights)
    {
        <!-- Quick Stats Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.Stats.TotalFlights</h4>
                                <p class="card-text">Total Flights</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-plane fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.Stats.UniqueAirports</h4>
                                <p class="card-text">Airports Visited</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-map-marker-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.Stats.UniqueCountries</h4>
                                <p class="card-text">Countries Visited</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-globe fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h4 class="card-title">@Model.GetQuickStats().MostUsedClass</h4>
                                <p class="card-text">Preferred Class</p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-star fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Flight Class Breakdown -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Flight Class Distribution</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <p><strong>Economy:</strong> @Model.Stats.EconomyFlights</p>
                                <p><strong>Premium Economy:</strong> @Model.Stats.PremiumEconomyFlights</p>
                            </div>
                            <div class="col-6">
                                <p><strong>Business:</strong> @Model.Stats.BusinessFlights</p>
                                <p><strong>First Class:</strong> @Model.Stats.FirstClassFlights</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="@Url.Action("MyFlights", "Dashboard")" class="btn btn-primary">View All My Flights</a>
                            <a href="@Url.Action("Statistics", "Dashboard")" class="btn btn-secondary">Detailed Statistics</a>
                            <button class="btn btn-success" disabled>Add New Flight (Coming Soon)</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Flights -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Recent Flights</h5>
                        <a href="@Url.Action("MyFlights", "Dashboard")" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body">
                        @if (Model.RecentFlights.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Flight</th>
                                            <th>Route</th>
                                            <th>Class</th>
                                            <th>Seat</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var flight in Model.RecentFlights)
                                        {
                                            <tr>
                                                <td><strong>@flight.FlightNumber</strong></td>
                                                <td>
                                                    @flight.DepartureAirportCode (@flight.DepartureCity) 
                                                    â†’ 
                                                    @flight.ArrivalAirportCode (@flight.ArrivalCity)
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">@flight.FlightClass</span>
                                                </td>
                                                <td>@flight.SeatNumber</td>
                                                <td>@flight.DepartureTimeUtc.ToString("MMM dd, yyyy")</td>
                                                <td>
                                                    @if (flight.DidFly)
                                                    {
                                                        <span class="badge bg-success">Completed</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">No Show</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No recent flights found.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- No flights message -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-plane fa-3x text-muted mb-3"></i>
                        <h3>Welcome to FlightTracker!</h3>
                        <p class="text-muted">You haven't recorded any flights yet. Start tracking your aviation journey!</p>
                        <button class="btn btn-primary" disabled>Add Your First Flight (Coming Soon)</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Future: Add any dashboard-specific JavaScript here
        console.log('Dashboard loaded for user @Model.UserId');
    </script>
}
