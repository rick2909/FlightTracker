@model FlightTracker.Web.Models.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "Settings";
}

<component type="typeof(FlightTracker.Web.Components.Settings.SettingsForm)"
           render-mode="Server"
           param-FullName="@Model.FullName"
           param-UserName="@Model.UserName"
           param-Email="@Model.Email"
           param-ProfileVisibility="@Model.ProfileVisibility"
           param-Theme="@Model.Theme"
           param-DistanceUnit="@Model.Preferences.DistanceUnit"
           param-TemperatureUnit="@Model.Preferences.TemperatureUnit"
           param-TimeFormat="@Model.Preferences.TimeFormat"
           param-DateFormat="@Model.Preferences.DateFormat" />

<script src="~/js/form-helper.js" asp-append-version="true"></script>
