@{
    ViewData["Title"] = "Airports";
}

<section class="container py-3">
    <h1 class="mb-3">Airport Overview</h1>

    <div id="airportsMap" class="flight-map__map" style="min-height:70vh" role="region" aria-label="Airports map"></div>

    <div id="airportSelection" class="mt-4" hidden>
        <h2 class="h4"><span id="selectedAirportName"></span></h2>
        <div class="mt-3">
            <h3 class="h5">Departing flights</h3>
            <div id="departingList" class="list-group"></div>
        </div>
        <div class="mt-4">
            <h3 class="h5">Arriving flights</h3>
            <div id="arrivingList" class="list-group"></div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/airports-map.js" asp-append-version="true"></script>
}
