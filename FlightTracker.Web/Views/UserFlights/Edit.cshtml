@using FlightTracker.Application.Dtos
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FlightTracker.Web.Models.EditUserFlightViewModel
@{
    ViewData["Title"] = $"Edit Flight {Model.FlightNumber}";
}

<div class="container py-4">
    <div class="row g-4">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Edit Flight @Model.FlightNumber</h5>
                    <span class="badge bg-secondary">@Model.DepartureAirportCode → @Model.ArrivalAirportCode</span>
                </div>
                <div class="card-body">
                    <component type="typeof(FlightTracker.Web.Components.Flights.EditUserFlightForm)" render-mode="ServerPrerendered" 
                               param-UserFlightId="@Model.UserFlightId" />
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0">Summary</h6>
                </div>
                <div class="card-body">
                    <div class="mb-2"><strong>@Model.DepartureAirportCode</strong> → <strong>@Model.ArrivalAirportCode</strong></div>
                    <div class="text-muted">@Model.DepartureTimeUtc:u → @Model.ArrivalTimeUtc:u</div>
                </div>
            </div>
        </div>
    </div>
</div>
